---
import Layout from "../layouts/Layout.astro";
import Project from "../components/Project.astro";
import { Projects } from "../data/projects.ts";
import { type ProjectType } from "../data/projects.ts";
---

<Layout title="Hi, I'm Liam">
  <main class="m-auto p-1 w-[900px] max-w-[calc(100%-2rem)] text-lg">
    <p class="text-lg md:text-xl mt-12">
      Hi, I'm Liam. I recently left my role as Software Engineer at <a
        href="https://www.justgiving.com/"
        target="_blank"
        class="text-green-500"
      >
        JustGiving</a
      > and moved to Seoul, where I am learning Korean at SNU whilst searching
      for new roles.
      <br /><br />
       Check out the projects below to see the skills I used in recent projects.


      <!-- Skills: React, Typescript, .NET, C#, GraphQL Next.js, SQL, Storybook and more! -->

      <br /><br />
       Find me on{" "}
      <a
        href="https://www.linkedin.com/in/liam-morley1/"
        target="_blank"
        class="text-green-500"
      >
        @LinkedIn
      </a>{" "}
       -{" "}
      <a
        href="https://github.com/devldm"
        target="_blank"
        class="text-green-500"
      >
        @GitHub</a
      >

       -{" "}
      <a
        href="https://dribbble.com/LiamIsDesigning"
        target="_blank"
        class="text-green-500"
      >
        @Dribbble
      </a>{" "}
    </p>
    <section id="projects" class="my-2 md:my-6">
      <h2 class="text-2xl font-bold mb-3 md:mb-5">Featured Projects</h2>
      <div class="grid grid-cols-1 gap-3">
        {
          Projects.map((project: ProjectType) => {
            return (
              <Project
                liveHref={project.liveHref}
                title={project.title}
                body={project.body}
                github={project.github}
                stack={project.stack}
                imgPath={project.imgPath!}
              />
            );
          })
        }
      </div>
    </section>
  </main>
</Layout>
